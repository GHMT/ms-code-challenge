  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.5",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "bootstrap": "^4.3.1",
    "contentful": "^7.10.0",
    "react": "^16.9.0",
    "react-bootstrap": "^1.0.0-beta.12",
    "react-dom": "^16.9.0",
    "react-markdown": "^4.2.2",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.1.2",
    "react-truncate": "^2.4.0",
    "rxjs": "^6.5.3",
    "typescript": "3.6.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage --watchAll=true",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/react-bootstrap": "^0.32.19",
    "@types/react-router": "^5.0.5",
    "@types/react-router-dom": "^4.3.5",
    "@types/react-truncate": "^2.3.3",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "jest-canvas-mock": "^2.1.1",
    "jest-enzyme": "^7.1.1",
    "node-sass": "^4.12.0"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/serviceWorker.ts",
      "<rootDir>/src/index.tsx",
      "<rootDir>/src/core/domain/adapter.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!<rootDir>/src/**/*.d.ts",
      "!<rootDir>/src/shared/types/**",
      "!<rootDir>/src/**/types.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  }
}
